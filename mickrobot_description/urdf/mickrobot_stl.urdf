  <!-- diff_drive_plugin -->


<gazebo reference="left_front_wheel">
  <mu1>1.8</mu1> <!-- 静摩擦系数 -->
  <mu2>4.0</mu2> <!-- 动摩擦系数 -->
</gazebo>

